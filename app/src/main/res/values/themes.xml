<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/ActionBarStyle</item>
        <item name="android:actionBarSize" tools:targetApi="11">@dimen/abc_action_bar_default_height</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/main_title_icon_back</item>
        <item name="android:toolbarStyle" tools:targetApi="21">@style/ToolBarStyle</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/colorPrimary_day</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/colorPrimaryDark_day</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/colorPrimary_day</item>
        <item name="android:textColor" tools:targetApi="21">@color/textColor</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarSize">@dimen/abc_action_bar_default_height</item>
        <item name="homeAsUpIndicator">@drawable/main_title_icon_back</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary_day</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_day</item>
        <item name="colorAccent">@color/colorPrimary_day</item>

    </style>

    <style name="ThemeActivity" parent="ThemeApp">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="ThemeActivity.NoActionBar">
        <item name="android:windowActionBar" tools:targetApi="11">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Support library compatibility -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>