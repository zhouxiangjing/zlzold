<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RemoteControl"
    android:id="@+id/remote_control">

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/device_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="000.000.000.000"
        android:textSize="24sp"
        android:textColor="@color/light_red"
        app:layout_constraintLeft_toLeftOf="@+id/remote_control"
        app:layout_constraintTop_toTopOf="@+id/remote_control"/>

    <com.zxj.zlz.ui.home.Wheel
        android:id="@+id/wheel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="@+id/remote_control"
        app:layout_constraintBottom_toBottomOf="@+id/remote_control"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>